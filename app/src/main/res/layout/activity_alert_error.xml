<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".global.AlertErrorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/rockness"
                android:lines="15"
                android:paddingLeft="80dp"
                android:paddingTop="90dp"
                android:paddingRight="80dp"
                android:singleLine="false"
                android:text="Oh my Gosh... we are so thrilled yet embarrassed that you expected us here too... Hmm we will come here soon... But until then.."
                android:textAlignment="center"
                android:textColor="#26c0a2"
                android:textFontWeight="400"
                android:textSize="37sp" />

            <Button
                android:id="@+id/go_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="495dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="188dp"
                android:background="@drawable/graident_button_background"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="@string/btn_go_home"
                android:textColor="@color/text_transparent" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>